{
  "name": "@bordoni/argus",
  "version": "1.0.0",
  "description": "HelpScout CLI tool for downloading conversations with attachments",
  "author": "Gustavo Bordoni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bordoni/argus.git"
  },
  "keywords": [
    "helpscout",
    "cli",
    "conversation",
    "download",
    "markdown",
    "api"
  ],
  "main": "src/cli.ts",
  "module": "src/cli.ts",
  "bin": {
    "argus": "./src/cli.ts"
  },
  "scripts": {
    "start": "bun run src/cli.ts",
    "dev": "bun --watch src/cli.ts",
    "build": "bun build src/cli.ts --compile --outfile argus",
    "build:linux": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile dist/argus-linux",
    "build:mac": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile dist/argus-mac",
    "build:mac-arm": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile dist/argus-mac-arm",
    "build:windows": "bun build src/cli.ts --compile --target=bun-windows-x64 --outfile dist/argus-windows.exe",
    "build:all": "bun run build:linux && bun run build:mac && bun run build:mac-arm && bun run build:windows",
    "link": "bun link",
    "unlink": "bun unlink",
    "prepublishOnly": "bun run build",
    "publish:dry": "bun publish --dry-run"
  },
  "type": "module",
  "dependencies": {
    "commander": "^12.1.0",
    "@inquirer/prompts": "^7.2.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
